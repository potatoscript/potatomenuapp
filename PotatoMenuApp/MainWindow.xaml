<Window x:Class="PotatoMenuApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PotatoMenuApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top" Height="30">
            <MenuItem Header="Home" Click="Home_Click" />
            <MenuItem Header="Recipe">
                <MenuItem Header="Potato" Click="Potato_Click" />
                <MenuItem Header="Tomato" Click="Tomato_Click" />
                <MenuItem Header="Lemon" Click="Lemon_Click" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click" />
                <MenuItem Header="Support" Click="Support_Click" />
            </MenuItem>
        </Menu>
        <!-- Content Area -->
        <Grid Name="MainContentGrid" Background="WhiteSmoke" Margin="10"/>
    </DockPanel>
</Window>
